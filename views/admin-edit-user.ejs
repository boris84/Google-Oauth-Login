<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/1f7012dcb5.js" crossorigin="anonymous" defer></script>
    <!--  bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="/css/style.css">
    <title>Admin Edit User</title>
  </head>
  <body>
   

  <div style="height:0">
    <div class="row">
      <div class="errors">
         <% if (errors) { %>
            <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                  <%= error.msg %>
            </div>
            <% }); %>
         <% } %>
      </div>
    </div>
  </div>
        
  
  <!-- /.container -->
  <main role="main" class="container">
    <div class="row">
      <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 mx-auto">

        <div class="main-nav admin">
            <nav>
                <ul>
                   <% if (!user) { %>
                        <li><a class="btn btn-primary" href="/auth/login">Login</a></li>
                    <% } else { %>
                        <li><a class="btn btn-primary" href="/admin/users/<%= user.id %>">Back</a></li>
                        <li><a class="btn btn-primary" href="/">Home</a></li>
                        <li><a class="btn btn-primary" href="/auth/logout">Logout</a></li>
                        <li><a class="btn btn-primary" href="/profile">Profile</a></li>
                    <% } %>
                </ul>
            </nav>
         </div>
                
                
        <div class="main-title admin">
            <h3 class="text-dark text-center">Edit Details</h3>
        </div>        
                  
    
        <div class="main-content admin">
            <form method="POST" action="/admin/users/admin-edit-user/<%= user.id %>">
                <div class="form-row">
                  <div class="col mx-auto p-3">
                    <img src="<%= user.thumbnail %>"/>

                    <div class="mb-2">
                        <label for="username" class="username">Username</label>
                        <input type="text" name="username" value="<%= user.username %>" class="form-control form-control-sm" aria-describedby="username">
                    </div>
                    <div class="mb-3">
                        <label for="GoogleId" class="form-label">GoogleId</label>
                        <input type="password" name="googleId" value="<%= user.googleId %>" class="form-control form-control-sm" aria-describedby="userId" readonly>
                    </div>
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                  </div>
                </div>
            </form>     
        </div> 
           
            <br>
                <div class="main-footer admin">
                    <div class="form copy text-center">&copy; dev010_1 2021</div>
                </div>                 
            <br>
       
      </div> 
    </div>
  </main>
  <!-- /.container -->


<script>
    const errors = document.querySelector('.errors');
    
    if (errors) {
       setTimeout(() => {
           errors.style.display = 'none'
       }, 2000);
    }
</script>
    
  
 <!-- bootstrap javascript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>