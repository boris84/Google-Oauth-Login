<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/1f7012dcb5.js" crossorigin="anonymous" defer></script>
    <!--  bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="/css/style.css">
    <title>Profile</title>
</head>
<body>
   

<div style="height:0">
   <div class="row ">
      <div class="message">
           <%- messages('message', locals) %>
      </div>
   </div>
</div>
       
   
<main role="main" class="container">
  <div class="row">
     <div class="col-xl-4  col-md-6 col-sm-8 mx-auto">
     
        <div class="main-nav profile">
            <nav>
                <ul>
                <li><a class="btn btn-primary" href="/">Home</a></li>
                <li><a class="btn btn-primary" href="/admin/users">Admin</a></li>
                <li><a class="btn btn-primary" href="/auth/logout">Logout</a></li>
                </ul>
            </nav>
        </div>


        <div class="main-title profile">
            <header>
                <h2>Welcome to your profile,</h2>
            </header>
        </div>


        <div class="main-content profile">
            <img src="<%= user.thumbnail %>"alt="profile picture"/>
            <h6><%= user.username %></h6>
            <p>This is your profile thumbnail</p>
        </div>


        <div class="main-footer profile ">
            <div>&copy; dev010_1 2021</div>
        </div>
    
       </div>
   </div>
</main>

   
<script>
    const message = document.querySelector('.message');
    
    if (message) {
       setTimeout(() => {
           message.style.display = 'none'
       }, 2000);
    }
</script>



<!-- bootstrap javascript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>